{
  "name": "acnh-counter",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "start": "parcel src/index.html -d docs/",
    "build": "rm -rf docs; mkdir docs; cp -R src/assets/img docs; parcel build src/index.html -d docs/ --public-url ./"
  },
  "license": "MIT",
  "dependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "tachyons": "^4.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "babel-preset-nano-react-app": "^0.1.0",
    "parcel-bundler": "^1.12.4"
  },
  "babel": {
    "presets": [
      "nano-react-app"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragmaFrag": "React.Fragment"
        }
      ]
    ]
  }
}
